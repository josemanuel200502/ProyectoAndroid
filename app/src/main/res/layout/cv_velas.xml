<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/verdepastel">

        <ImageView
            android:id="@+id/imagenVela"
            android:layout_width="144dp"
            android:layout_height="103dp"
            android:layout_margin="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/diadelluvia" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/nombreVela"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DÃ­a de lluvia"
                android:fontFamily="@font/baloo_thambi_2"
                android:textColor="@color/TituloLogin"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/precioVela"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17,50"
                android:fontFamily="@font/baloo_thambi_2"
                android:textColor="@color/TituloLogin"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>